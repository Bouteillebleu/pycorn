include common.mk

hostpgen: stamp-host
	cp -p build/Parser/pgen $(output)

stamp-host: stamp-sources
	rm -rf build
	rm -rf install
	&mkdir build
	cd build; ../Python-$(PYTHONVER)/configure --prefix=$(absolute_filename $(ROOT)/hostpy/install)
	cd build; make
	cd build; make install
	&touch stamp-host

stamp-sources Python-$(PYTHONVER)/configure: $(ROOT)/downloads/Python-$(PYTHONVER).tar.bz2
	rm -rf Python-$(PYTHONVER)
	tar jxf $(input)
	&touch $(output)

no_implicit_load Python-$(PYTHONVER) build
